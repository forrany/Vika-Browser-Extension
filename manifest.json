{
  "manifest_version": 3,
  "name": "AI Chat Sidebar",
  "version": "1.0",
  "description": "AI Chat sidebar for Chrome",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "src/pages/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/main.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/main.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/pages/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 